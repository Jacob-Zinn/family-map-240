        <!--    var showSpouseLines: Boolean = true,-->
        <!--    var fatherSide: Boolean = true,-->
        <!--    var motherSide: Boolean = true,-->
        <!--    var maleEvents: Boolean = true,-->
        <!--    var femaleEvents: Boolean = true-->


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
